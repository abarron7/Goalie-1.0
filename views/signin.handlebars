{{!-- PASSPORT: This is the signin form to sign in to the server --}}
<section class="hero is-success is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <div class="box" id="box">
                    <figure class="avatar">
                        <img src="images/1659170386_4649aca8-2922-4ee9-a6d1-e10dca02ebf7.png">
                    </figure>
                    <form id="signin" name="signin" method="post" action="signin">
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input type="email" name="email" class="input is-large" placeholder="Email"
                                style="background-color: #717d88;">
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input name="password" type="password" class="input is-large" placeholder="Password"
                                style="background-color: #717d88;">
                        </div>
                        <input type="submit" name="" value="Login">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/login.js"></script>