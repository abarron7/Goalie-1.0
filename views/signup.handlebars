{{!-- PASSPORT: This is the signup form to sign up to authenticate to the server --}}
<section class="hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <div class="box" id="box">
          <figure class="avatar">
            <img src="images/1659170386_4649aca8-2922-4ee9-a6d1-e10dca02ebf7.png">
          </figure>
          <form id="signup" name="signup" method="post" action="/signup">
            <div class="form-group">
              <label for="email">Email Address:</label>
              <input name="email" type="email" class="input is-large" style="background-color: #717d88;"/>
            </div>
            <div class="form-group">
              <label for="firstname">Firstname:</label>
              <input name="firstname" type="text" class="input is-large" style="background-color: #717d88;"/>
            </div>
            <div class="form-group">
              <label for="lastname">Lastname:</label>
              <input name="lastname" type="text" class="input is-large" style="background-color: #717d88;"/>
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <input name="password" type="password" class="input is-large" style="background-color: #717d88;"/>
            </div>
            <button class="btn button is-block is-info is-large is-fullwidth" type="submit">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>